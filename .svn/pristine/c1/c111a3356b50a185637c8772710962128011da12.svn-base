
.change_heard{
	width: 3rem;
	height: 3rem;
	margin: 1rem auto;
}
.change_heard img{
	width: 100%;
	height: 100%;
}
.change_heard p{
	text-align: center;
	padding-top: 1rem;
	font-size: 0.26rem;
}
.shareList{
	display: none;
	position: absolute;
	z-index: 101;
	bottom: 0;
	width: 100%;
	padding-top: 0.5rem;
	background: white;
}
.shareList .noshare{
	width: 100%;
	line-height: 50px;
	border-top: 1px solid gainsboro;
	text-align: center;
	color: #979797;
}
.shareList ul li{
	position: relative;
	text-align: center;
	width: 25%;
	float: left;
}
.shareList ul li a{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	display: block;
}
.shareList ul li span{
	width: 100%;
	display: block;
}
.shareList ul li span img{
	width: 100%;
	height: 100%;
}
.shareList ul li p{
	color: #666;
	padding: 0.25rem 0;
}
/*弹出背景*/
.ifra{
	height: 100%;
    width:100%;
    background:#000;
    background: rgba(0,0,0,.4);
    z-index: 100;
    top:0;
    left:0;
}
