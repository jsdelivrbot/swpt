
.mycollect_top,.mycollect_btn{
	position: absolute;
	width: 100%;
}
.mycollect_top{
	height: 6.25em;
}
.mycollect_btn{
	text-align: center;
	font-size: 1.3em;
	line-height: 2.5em;
	color: #EAFBF1;
	bottom: 0px;
	background-color: #52DFAA;
	display: none;
}
.mycollect_top_b{
	height: 3.125em;
	overflow: hidden;
}
.mycollect_top_b{
	background-color: #FFFFFF;
}
.top_b_ul{
	width: 90%;
	margin-left: 5%;
	display: flex;
	height: 100%;
}
.top_b_ul li{
	text-align: center;
	color: #444444;
	line-height: 3.125em;
	font-weight: 500;
	flex: auto;
	height: 100%;
	margin-top: -3px;
}
.topBul{
	color: #6CD7AF;
	border-bottom: 3px solid #3FDDA1;
}
.mycollect_con{
	width: 100%;
	padding: 8.25em 0 3.125em 0;
}
.mycollect_con_ul{
	position: relative;
	padding: 0.6em 0;
	display: none;
}
.mycollect_con_ul.on{
	display: block;
}
.mycollect_con_li{
	position: relative;
	width: 100%;
	background-color: #FFFFFF;
	border-bottom:1px solid #F1F1F1;
	border-top:1px solid #F1F1F1;
}
.con_li_bo{
	position: relative;
	width: 100%;
	height: 6em;
	padding: 0.6em 0;
}
.bo_img{
	position: relative;
	float: left;
	width: 40%;
	height: 100%;
}
.bo_img_a{
	position: relative;
	width: 30%;
	height: 100%;
	float: left;
}
.bo_img_a input{
	position: absolute;
	width: 1.5em;
	display: none;
	height: 1.5em;
	border: 1px solid  #A9A9A9;
	border-radius: 1.5em;
	left: 50%;
	top:50%;
	margin-top: -0.75em;
	margin-left: -0.75em;
}
.bo_img_b{
	/*width: 70%;*/
	float: left;
	height: 100%;
}
.bo_con{
	position: relative;
	float: left;
	width: 60%;
	height: 100%;
}
.bo_con_a,.bo_con_b,.bo_conb_a,.bo_conb_b,.bo_conb_c{
	display: block;
	width: 90%;
	margin-left: 5%;
}
.bo_con_a{
	height: 70%;
	color: #444444;
	font-weight: 500;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.bo_con_b{
	height: 30%;
	font-size: 0.9em;
	color: #C0C0C0;
}
.bo_con_c{
	color:#87abd9 ;
}
.bo_conb_a{
	height: 30%;
	font-size: 0.9em;
	color: #87abd9;
}
.bo_conb_b{
	height: 50%;
	color: #444444;
	font-weight: 500;
	font-size: 1em;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	/*-webkit-line-clamp: 2;*/
	-webkit-box-orient: vertical;
}
.bo_conb_c{
	height: 20%;
	font-size: 0.9em;
	color: #a5a5a5;
}
.bo_conb_c label{
	width: 50%;
	float: left;
}
.bo_conb_c label.bo_conb_c_price{
	text-align: right;
}