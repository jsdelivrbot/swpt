@media only screen and (min-width: 375px) {
    .footer {font-size: 50px;}
}
@media only screen and (min-width: 376px) and (max-width: 750px) {
    .footer {font-size: 60px;}
}
@media only screen and (min-width: 751px) {
    .footer {font-size: 70px;}
}


.footer {
    position: fixed;
    bottom: 0;
    padding: .15em 0;
    width: 100%;
    /*height: 1em;*/
    border-top: 1px solid #ececec;
    background-color: #fff;
}
.footer .fnav {
    display: flex;
    justify-content: center;
    margin: 0;
    /*height: 100%;*/
    list-style: none;
}
.footer .fnav__item {
    flex: 1 0 17%;
    /*height: 100%;*/
    text-align: center;
}

.footer .fnav__link {
    display: block;
    /*font-size: .2rem;*/
    font-size: .24em;
    color: #888;
    white-space: nowrap;
}

.footer .fnav__link--active {
    color: #56c399;
}
.footer .fnav__img {
    display: block;
    margin: 0 auto;
    /*height: .45rem;*/
    height: 2em;
}



/* 旧版footer */
.container-fluid{position:absolute;bottom:0px;width:100%;height:100%;margin:0;padding:0;}
.container{margin:0;padding:0;
    width:100%;height: 100%;overflow: auto;
}
.container a{text-decoration: none;cursor:pointer;}

#footer{width: 100%;height:100px;background:#f8f8f8;margin-top:50px;position:fixed;bottom:0px;left:0;right:0;margin-left:0;margin-right: 0}

#footer ul{margin:0 auto;width:100%;height:100px;margin-top: 20px;}
#footer ul li{list-style:none;float:left;margin:0 auto;margin-top:10px;width:20%;padding:0;}
#footer ul li  img{margin:0 auto;}
#footer ul li a{text-decoration:none;}
#footer ul li p{text-align: center;}
@media screen and (max-width:720px) and (min-width:300px){
    .container-fluid{position: absolute;bottom:0px;width:100%;height: 100%;margin:0;padding:0;}
    #footer ul li{list-style:none;float:left;margin:0 auto;margin-top:10px;width:20%;padding:0;}
    #footer ul li  img{width:25px;height:25px;}
}
