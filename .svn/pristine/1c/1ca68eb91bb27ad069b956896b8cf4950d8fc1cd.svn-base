header {
  border-bottom: none;
  background: #E13F2A;
}

header i {
  font-size: 0.53333rem !important;
}

header .scan {
  margin-right: 0.4rem;
}

.userInfo {
  background: #E13F2A;
  margin-top: -0.02667rem;
  padding: 0.26667rem;
  padding-left: 0.4rem;
  color: #fff;
  font-size: 0.42667rem;
}

.userInfo .userImg {
  float: left;
  width: 1.6rem;
  height: 1.6rem;
}

.userInfo .userImg img {
  border-radius: 100%;
  width: 100%;
  height: 100%;
}

.userInfo .userRight {
  overflow: hidden;
  padding-left: 0.4rem;
}

.userInfo .userRight .hasLogin {
  display: none;
}

.userInfo .userRight .hasLogin .userName {
  float: left;
}

.userInfo .userRight .hasLogin .desc {
  margin-top: 0.26667rem;
}

.userInfo .userRight .hasLogin .userRank {
  padding: 0 0.18667rem;
  margin-left: 0.26667rem;
  background: #fff000;
  color: #e13f2a;
  border-radius: 0.26667rem;
  font-size: 0.32rem;
  position: relative;
  top: -0.05333rem;
}

.userInfo .userRight .noLogin {
  padding: 0.46667rem 0;
}

.navTop {
  margin-top: 0.26667rem;
}

.navTop .nav {
  width: 25%;
  float: left;
  text-align: center;
  box-sizing: border-box;
}

.navTop .nav a {
  display: inline-block;
  width: 100%;
}

.navTop .nav i {
  color: #E13F2A;
  font-size: 1.06667rem;
}

.navTop .nav .title {
  font-size: 0.48rem;
}

.navTop .nav.second {
  display: none;
  margin-top: 0.26667rem;
}

.borderTop {
  margin-top: 0.2rem;
}

.subNav .nav {
  display: block;
  margin: 0 0.26667rem;
  padding: 0.26667rem 0;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}

.subNav .nav i {
  color: #E13F2A;
  font-size: 0.93333rem;
}

.subNav .nav .title {
  margin-left: 0.4rem;
  font-size: 0.48rem;
  display: inline-block;
  position: relative;
  top: -0.18667rem;
}

.subNav .nav i.right {
  position: relative;
  top: 0.16rem;
  color: #000;
  font-size: 0.53333rem;
  transform: rotate(-180deg);
}
