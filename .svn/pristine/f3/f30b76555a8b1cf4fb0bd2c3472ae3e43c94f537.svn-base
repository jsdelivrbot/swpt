a[href] {
  color: #fff;
}

html, body {
  height: 100vh;
}

header .subNavMenu {
  background: #e22d00;
  width: 45%;
  position: absolute;
  right: 3%;
  top: 1.06667rem;
  box-shadow: 0 1px 15px 1px #7b7676;
  max-width: 6rem;
  display: none;
}

header .subNavMenu li {
  text-align: left;
  text-indent: 0.4rem;
  border-bottom: 1px solid #ff9393;
}

header .subNavMenu li i {
  font-size: 0.53333rem;
  margin-right: 0.26667rem;
}

.activityC {
  padding: 0.53333rem 0.53333rem;
}

.activityC .activity {
  display: none;
  border-bottom: 1px solid #ccc;
  padding-bottom: 0.26667rem;
}

.activityC .activity .aImg {
  width: 2.66667rem;
  height: 2.66667rem;
  margin-right: 0.4rem;
}

.activityC .activity .aImg img {
  width: 100%;
  height: 100%;
}

.activityC .activity .aMain {
  font-size: 0.37333rem;
  text-align: justify;
}

.activityC .activity .aMain h2, .activityC .activity .aMain p {
  margin-bottom: 0.33333rem;
}

.activityC .activity .aMain .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  max-height: 1.06667rem;
}

.activityC .activity .aMain #sourceTarget {
  font-weight: bold;
}

.activityC .activity .aMain .share {
  font-size: 0.46667rem;
}

.activityC .activity:not(:first-of-type) {
  margin-top: 0.53333rem;
}
